<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spec_black"
    android:padding="10dp"
    tools:context=".AnalyticsActivity">

    <LinearLayout
        android:id="@+id/llGroupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTodayFocusGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvTodayFocusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_blackk"
                android:gravity="center"
                android:text="@string/todays_focus"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:typeface="sans"
                app:layout_constraintBottom_toTopOf="@id/llHoursTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/llHoursTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTodayFocusText">

                <TextView
                    android:id="@+id/tvHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/roboto_blackk"
                    android:text="@string/_0"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvHoursSmallH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/roboto_blackk"
                    android:text="@string/h"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:typeface="sans" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvMinutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="@string/_0_minutes"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llHoursTime" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTotalPomoGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvTotalPomodoroText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/roboto_blackk"
                android:gravity="center"
                android:text="@string/total_pomodoro"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:typeface="sans"
                app:layout_constraintBottom_toTopOf="@id/llTotalPomosNumberContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/llTotalPomosNumberContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTotalPomodoroText">

                <TextView
                    android:id="@+id/tvTotalPomosNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/roboto_blackk"
                    android:text="@string/_asrg"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:typeface="sans" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTotalPomodoroMinutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="@string/_0_minutes234"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llTotalPomosNumberContainer" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/llGroupContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_blackk"
            android:text="Today's Tasks"
            android:textColor="#B3FFFFFF"
            android:textSize="20sp"
            android:typeface="sans" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTaskListContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:visibility="visible"
            tools:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llNavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivTimer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo0"
            android:src="@drawable/ic_timer_24" />

        <ImageView
            android:id="@+id/ivTaskList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_task_list_24dp" />

        <ImageView
            android:id="@+id/ivAnalytics"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo00"
            android:src="@drawable/ic_baseline_insert_chart_24"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo000"
            android:src="@drawable/ic_baseline_settings_24" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>